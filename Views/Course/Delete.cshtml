@model MS.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<div class="alert alert-warning">
    <h4>Warning</h4>
    <p>Are you sure you want to delete this course? This action cannot be undone.</p>
    <p>If this course has any associated exam seatings, the deletion will fail.</p>
    </div>

<div>
    <h4>Course Details</h4>
    <hr />
            <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreditHours)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreditHours)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Degree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Degree)
        </dd>
            </dl>

    <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
</div> 