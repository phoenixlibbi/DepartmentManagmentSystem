@model MS.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container">
    <h2>Delete Student</h2>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this student?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Roll Number</dt>
                        <dd class="col-sm-8">@Model.RollNumber</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Session</dt>
                        <dd class="col-sm-8">@Model.Session</dd>

                        <dt class="col-sm-4">Degree</dt>
                        <dd class="col-sm-8">@Model.Degree</dd>

                        <dt class="col-sm-4">Section</dt>
                        <dd class="col-sm-8">Section @Model.Section</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Age</dt>
                        <dd class="col-sm-8">@Model.Age</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">CNIC</dt>
                        <dd class="col-sm-8">@Model.CNIC</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div> 