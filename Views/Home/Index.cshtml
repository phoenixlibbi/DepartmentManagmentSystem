@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">Welcome to Department Management System</h1>
        <p class="lead text-muted">Streamline your academic operations with our comprehensive management solution</p>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-graduate fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Students</h3>
                    <p class="card-text text-muted">Manage student records, enrollments, and academic progress</p>
                    <a asp-controller="Student" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>Manage Students
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-book fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Courses</h3>
                    <p class="card-text text-muted">Organize course information, schedules, and materials</p>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>Manage Courses
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-door-open fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Rooms</h3>
                    <p class="card-text text-muted">Track room availability and manage facility resources</p>
                    <a asp-controller="Room" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>Manage Rooms
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-tasks fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Exams</h3>
                    <p class="card-text text-muted">Organize exam schedules and manage seating arrangements</p>
                    <a asp-controller="Exam" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>Manage Exams
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">Quick Statistics</h4>
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fas fa-users fa-2x text-primary mb-2"></i>
                                <h3 id="studentCount">-</h3>
                                <p class="text-muted">Total Students</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fas fa-book-open fa-2x text-primary mb-2"></i>
                                <h3 id="courseCount">-</h3>
                                <p class="text-muted">Active Courses</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fas fa-building fa-2x text-primary mb-2"></i>
                                <h3 id="roomCount">-</h3>
                                <p class="text-muted">Available Rooms</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <i class="fas fa-calendar-check fa-2x text-primary mb-2"></i>
                                <h3 id="examCount">-</h3>
                                <p class="text-muted">Scheduled Exams</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load statistics
            $.get('/api/Home/statistics', function(data) {
                $('#studentCount').text(data.studentCount);
                $('#courseCount').text(data.courseCount);
                $('#roomCount').text(data.roomCount);
                $('#examCount').text(data.examCount);
            });
        });
    </script>
}
